      },
      {
        "id": "order_with_tax",
        "title": "Order Total with Tax",
        "description": "Calculate subtotal, tax, and final total",
        "difficulty": "intermediate",
        "code": [
          "public class OrderWithTax {",
          "    public static void main(String[] args) {",
          "        // Order information",
          "        double lattePrice = 4.50;",
          "        int quantity = 2;",
          "        // Calculate subtotal",
          "        double subtotal = lattePrice * quantity;",
          "        // Calculate tax (8% rate)",
          "        double taxRate = 0.08;",
          "        double tax = subtotal * taxRate;",
          "        // Calculate final total",
          "        double total = subtotal + tax;",
          "        // Display receipt breakdown",
          "        System.out.println(\"Subtotal: $\" + subtotal);",
          "        System.out.println(\"Tax: $\" + tax);",
          "        System.out.println(\"Total: $\" + total);",
          "    }",
          "}"
        ]
      },
      {
        "id": "coffee_shop_receipt",
        "title": "Coffee Shop Receipt",
        "description": "Complete receipt with multiple items and calculations",
        "difficulty": "intermediate",
        "code": [
          "public class CoffeeShopReceipt {",
          "    public static void main(String[] args) {",
          "        // Customer and menu information",
          "        String customerName = \"John\";",
          "        double lattePrice = 4.50;",
          "        double muffinPrice = 2.25;",
          "        int latteQuantity = 2;",
          "        int muffinQuantity = 1;",
          "        // Calculate line totals for each item",
          "        double latteTotal = lattePrice * latteQuantity;",
          "        double muffinTotal = muffinPrice * muffinQuantity;",
          "        // Calculate order subtotal",
          "        double subtotal = latteTotal + muffinTotal;",
          "        // Calculate tax (8.5% rate)",
          "        double tax = subtotal * 0.085;",
          "        // Calculate final total",
          "        double finalTotal = subtotal + tax;",
          "        // Display formatted receipt",
          "        System.out.println(\"=== JAVA COFFEE SHOP ===\");",
          "        System.out.println(\"Customer: \" + customerName);",
          "        System.out.println(\"2 Lattes: $\" + latteTotal);",
          "        System.out.println(\"1 Muffin: $\" + muffinTotal);",
          "        System.out.println(\"Subtotal: $\" + subtotal);",
          "        System.out.println(\"Tax: $\" + tax);",
          "        System.out.println(\"TOTAL: $\" + finalTotal);",
          "    }",
          "}"
        ]
      }
    ]
  }
