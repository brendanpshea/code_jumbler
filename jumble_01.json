        "id": "price_calculation",
        "title": "Simple Price Calculation",
        "description": "Basic arithmetic with coffee prices",
        "difficulty": "intermediate",
        "code": [
          "public class PriceCalculation {",
          "    public static void main(String[] args) {",
          "        // Order details",
          "        double coffeePrice = 3.50;",
          "        int quantity = 2;",
          "        // Calculate total using multiplication",
          "        double total = coffeePrice * quantity;",
          "        // Display order summary",
          "        System.out.println(\"Coffee price: $\" + coffeePrice);",
          "        System.out.println(\"Quantity: \" + quantity);",
