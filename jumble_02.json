        "id": "if_else_basic",
        "title": "ID Verification System",
        "description": "Using if-else for binary decisions",
        "difficulty": "beginner",
        "code": [
          "public class IDVerification {",
          "    public static void main(String[] args) {",
          "        // Create a true/false variable for ID status (true)",
          "        boolean hasID = true;",
          "        // Create a whole number variable for customer age (19)",
          "        int customerAge = 19;",
          "        // Check if customer age is greater than or equal to 21",
          "        if (customerAge >= 21) {",
          "            // Display welcome message if age check passes",
          "            System.out.println(\"Age verified - welcome!\");",
          "        } else {",
