      {
        "id": "inventory_system",
        "title": "Stock Alert System",
        "description": "Complex array processing with conditionals in loops",
        "difficulty": "advanced",
        "code": [
          "public class StockAlertSystem {",
          "    public static void main(String[] args) {",
          "        // Create a text array with item names (Duff Beer, Guinness, House Wine, Pretzels)",
          "        String[] items = {\"Duff Beer\", \"Guinness\", \"House Wine\", \"Pretzels\"};",
          "        // Create a whole number array with stock amounts (5, 8, 25, 45)",
          "        int[] stockLevels = {5, 8, 25, 45};",
          "        // Create a counter variable to track low stock items (0)",
          "        int lowStockCount = 0;",
          "        // Display report header",
          "        System.out.println(\"=== INVENTORY REPORT ===\");",
          "        // Create a loop that goes through each array position",
          "        for (int i = 0; i < items.length; i++) {",
          "            // Check if current stock level is 10 or less",
          "            if (stockLevels[i] <= 10) {",
          "                // Display low stock warning message",
          "                System.out.println(\"LOW STOCK: \" + items[i] + \" - only \" + stockLevels[i] + \" left!\");",
          "                // Add 1 to the low stock counter",
          "                lowStockCount++;",
          "            } else {",
          "                // Display normal stock level message",
          "                System.out.println(\"OK: \" + items[i] + \" - \" + stockLevels[i] + \" in stock\");",
          "            }",
          "        }",
          "        // Check if any items have low stock",
          "        if (lowStockCount > 0) {",
          "            // Display warning message with count of low stock items",
          "            System.out.println(\"Warning: \" + lowStockCount + \" items need restocking!\");",
          "        } else {",
          "            // Display all clear message if no low stock items",
          "            System.out.println(\"All inventory levels are good!\");",
          "        }",
          "    }",
          "}"
        ]
      }
    ]
