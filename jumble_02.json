      {
        "id": "multiple_conditions",
        "title": "Happy Hour Pricing",
        "description": "Using else if for multiple time-based conditions",
        "difficulty": "beginner",
        "code": [
          "public class HappyHourPricing {",
          "    public static void main(String[] args) {",
          "        // Create a whole number variable for current hour (18)",
          "        int currentHour = 18;",
          "        // Create a decimal variable for beer price (5.00)",
          "        double beerPrice = 5.00;",
          "        // Check if current hour is between 17 and 19 (happy hour)",
          "        if (currentHour >= 17 && currentHour < 19) {",
          "            // Calculate discounted price by multiplying by 0.5",
          "            beerPrice = beerPrice * 0.5;",
          "            // Display happy hour price",
          "            System.out.println(\"Happy hour price: $\" + beerPrice);",
          "        } else if (currentHour >= 22) {",
          "            // Display late night message if hour is 22 or later",
          "            System.out.println(\"Late night menu only\");",
          "        } else {",
          "            // Display regular price for all other times",
          "            System.out.println(\"Regular price: $\" + beerPrice);",
          "        }",
          "    }",
          "}"
        ]
      },
