      {
        "id": "2d_array_processing",
        "title": "Movie Ratings Grid",
        "description": "Processing 2D arrays with calculations",
        "difficulty": "intermediate",
        "code": [
          "public class MovieRatings {",
          "    public static void main(String[] args) {",
          "        // Create 2D decimal array with movie ratings by critic. Values are [8.5, 9.0, 7.5], [6.0, 8.5, 9.5], [7.0, 7.5, 8.0]",
          "        double[][] ratings = {",
          "            {8.5, 9.0, 7.5},",
          "            {6.0, 8.5, 9.5},",
          "            {7.0, 7.5, 8.0}",
          "        };",
          "        // Create variable to store total of all ratings (0.0)",
          "        double total = 0.0;",
          "        // Create variable to count total number of ratings (0)",
          "        int count = 0;",
          "        // Display ratings grid header",
          "        System.out.println(\"Movie Ratings by Critic:\");",
          "        // Create outer loop for each movie row",
          "        for (int movie = 0; movie < ratings.length; movie++) {",
          "            // Display movie number starting from 1",
          "            System.out.print(\"Movie \" + (movie + 1) + \": \");",
          "            // Create inner loop for each critic rating",
          "            for (int critic = 0; critic < ratings[movie].length; critic++) {",
          "                // Display current rating",
          "                System.out.print(ratings[movie][critic] + \" \");",
          "                // Add current rating to total",
          "                total += ratings[movie][critic];",
          "                // Add 1 to count",
          "                count++;",
          "            }",
          "            // Move to next line after each movie",
          "            System.out.println();",
          "        }",
          "        // Calculate average by dividing total by count",
          "        double average = total / count;",
          "        // Display the calculated average rating",
          "        System.out.println(\"Average rating: \" + average);",
          "    }",
          "}"
        ]
      },
