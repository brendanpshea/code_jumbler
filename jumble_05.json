          "        if (rating != null) {",
          "            // Display the rating value",
          "            System.out.println(\"Rating: \" + rating);",
          "        }",
          "        // Display box office amount",
          "        System.out.println(\"Box Office: \" + boxOffice);",
          "    }",
          "}"
