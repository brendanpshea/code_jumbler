      {
        "id": "null_checking",
        "title": "Character Database with Null Safety",
        "description": "Safely handling null values in arrays",
        "difficulty": "beginner",
        "code": [
          "public class CharacterDatabase {",
          "    public static void main(String[] args) {",
          "        // Create a text array with some null values (Luke Skywalker, null, Princess Leia, null, Han Solo)",
          "        String[] characters = {\"Luke Skywalker\", null, \"Princess Leia\", null, \"Han Solo\"};",
          "        // Create counters for known and unknown characters (0 each)",
          "        int knownCount = 0;",
          "        int unknownCount = 0;",
          "        // Use enhanced loop to go through each character",
          "        for (String character : characters) {",
          "            // Check if current character is not null",
          "            if (character != null) {",
          "                // Display character name",
          "                System.out.println(character);",
          "                // Add 1 to known character counter",
          "                knownCount++;",
          "            } else {",
          "                // Display unknown message",
          "                System.out.println(\"Unknown\");",
          "                // Add 1 to unknown character counter",
          "                unknownCount++;",
          "            }",
          "        }",
          "        // Display totals",
          "        System.out.println(\"Known: \" + knownCount);",
          "        System.out.println(\"Unknown: \" + unknownCount);",
          "    }",
          "}"
        ]
      },
