        "difficulty": "intermediate",
        "code": [
          "import java.util.Random;",
          "public class MovieGenerator {",
          "    public static void main(String[] args) {",
          "        // Create text arrays with movie data -- genres are Action, Comedy, Drama, Sci-Fi; titles are Space Battle, Robot Wars, Lost World, Time Jump",
          "        String[] genres = {\"Action\", \"Comedy\", \"Drama\", \"Sci-Fi\"};",
          "        String[] titles = {\"Space Battle\", \"Robot Wars\", \"Lost World\", \"Time Jump\"};",
          "        // Create a Random object for generating random numbers",
          "        Random rand = new Random();",
          "        // Display generator header",
          "        System.out.println(\"Random Movie Recommendations:\");",
          "        // Create loop that runs 3 times",
          "        for (int i = 1; i <= 3; i++) {",
          "            // Generate random index for genres array",
          "            int genreIndex = rand.nextInt(genres.length);",
          "            // Generate random index for titles array", 
          "            int titleIndex = rand.nextInt(titles.length);",
          "            // Generate random rating between 1.0 and 10.0",
          "            double rating = 1.0 + (rand.nextDouble() * 9.0);",
          "            // Round rating to 1 decimal place",
          "            rating = Math.round(rating * 10.0) / 10.0;",
          "            // Display movie number, title, genre, and rating",
          "            System.out.println(\"Movie \" + i + \": \" + titles[titleIndex] + \" (\" + genres[genreIndex] + \") - \" + rating + \"/10\");",
          "        }",
          "    }",
          "}"
        ]
