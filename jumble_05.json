        "title": "Movie Rating Converter",
        "description": "Converting between data types with proper casting",
        "difficulty": "beginner",
        "code": [
          "public class RatingConverter {",
          "    public static void main(String[] args) {",
          "        // Create a decimal variable for movie rating (8.7)",
          "        double rating = 8.7;",
          "        // Convert rating to whole number using proper rounding",
          "        int stars = (int) Math.round(rating / 2);",
          "        // Create a decimal variable for box office in billions (2.068)",
          "        double boxOffice = 2.068;",
          "        // Convert to whole millions by truncating decimal part",
          "        int millions = (int) (boxOffice * 1000);",
          "        // Display the star rating result",
          "        System.out.println(\"Stars: \" + stars);",
          "        // Display the millions amount",
          "        System.out.println(\"Millions: \" + millions);",
          "    }",
          "}"
