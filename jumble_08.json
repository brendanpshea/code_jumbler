{
  "problemSet": {
    "title": "Java Inheritance & Polymorphism - Chapter 8",
    "description": "Inheritance, method overriding, polymorphism, interfaces, and abstract classes with fitness theme",
    "version": "1.0",
    "problems": [
      {
        "id": "simple_inheritance",
        "title": "Basic Inheritance",
        "description": "Creating a subclass that extends a parent",
        "difficulty": "beginner",
        "code": [
          "class Exercise {",
          "    String name;",
          "    // Constructor that takes name parameter",
          "    Exercise(String name) {",
          "        // Assign parameter to this object's name field",
          "        this.name = name;",
          "    }",
          "}",
          "// Create PushUp class that extends Exercise",
          "class PushUp extends Exercise {",
          "    // Constructor with no parameters",
          "    PushUp() {",
          "        // Call parent constructor with text Push-Up",
          "        super(\"Push-Up\");",
          "    }",
          "}"
        ]
      },
      {
        "id": "method_override",
        "title": "Overriding Methods",
        "description": "Replacing parent method in child class",
        "difficulty": "beginner",
        "code": [
          "class Exercise {",
          "    String name;",
          "    Exercise(String name) { this.name = name; }",
          "    // Method that prints performing message",
          "    void perform() {",
          "        System.out.println(\"Performing \" + name);",
          "    }",
          "}",
          "class Squat extends Exercise {",
          "    Squat() { super(\"Squat\"); }",
          "    // Override parent perform method",
          "    @Override",
          "    void perform() {",
          "        // Print custom squat message",
          "        System.out.println(\"Doing squats\");",
          "    }",
          "}"
        ]
      },
      {
        "id": "polymorphism_basic",
        "title": "Basic Polymorphism",
        "description": "Using parent type for child objects",
        "difficulty": "intermediate",
        "code": [
          "public class PolymorphismDemo {",
          "    public static void main(String[] args) {",
          "        // Create parent-type variable holding PushUp object",
          "        Exercise e1 = new PushUp();",
          "        // Create parent-type variable holding Squat object",
          "        Exercise e2 = new Squat();",
          "        // Call perform on first exercise (runs PushUp version)",
          "        e1.perform();",
          "        // Call perform on second exercise (runs Squat version)",
          "        e2.perform();",
          "    }",
          "}"
        ]
      },
      {
        "id": "simple_interface",
        "title": "Creating an Interface",
        "description": "Defining and implementing an interface",
        "difficulty": "intermediate",
        "code": [
          "// Define interface with two method signatures",
          "interface Trackable {",
          "    // Method that returns text name",
          "    String name();",
          "    // Method that returns whole number calories",
          "    int calories();",
          "}",
          "// Class that implements the interface",
          "class Running implements Trackable {",
          "    // Implement name method",
          "    public String name() {",
          "        // Return the text Running",
          "        return \"Running\";",
          "    }",
          "    // Implement calories method",
          "    public int calories() {",
          "        // Return the value 100",
          "        return 100;",
          "    }",
          "}"
        ]
      },
      {
        "id": "abstract_class",
        "title": "Abstract Class",
        "description": "Creating abstract class with abstract method",
        "difficulty": "intermediate",
        "code": [
          "// Define abstract class",
          "abstract class Movement {",
          "    String name;",
          "    // Constructor with name parameter",
          "    Movement(String name) {",
          "        this.name = name;",
          "    }",
          "    // Declare abstract method with no body",
          "    abstract void perform();",
          "}",
          "// Concrete class extending abstract class",
          "class Jump extends Movement {",
          "    // Constructor calling parent with Jump text",
          "    Jump() {",
          "        super(\"Jump\");",
          "    }",
          "    // Implement the abstract method",
          "    void perform() {",
          "        System.out.println(\"Jumping\");",
          "    }",
          "}"
        ]
      },
      {
        "id": "static_final",
        "title": "Static and Final",
        "description": "Using class-level constants and methods",
        "difficulty": "intermediate",
        "code": [
          "class GymMath {",
          "    // Create public static final constant (2.2)",
          "    public static final double KG_TO_LB = 2.2;",
          "    // Create static method that takes decimal parameter",
          "    public static double toPounds(double kg) {",
          "        // Return kg multiplied by conversion constant",
          "        return kg * KG_TO_LB;",
          "    }",
          "}",
          "public class StaticDemo {",
          "    public static void main(String[] args) {",
          "        // Call static method without creating object",
          "        double result = GymMath.toPounds(50);",
          "        System.out.println(result);",
          "    }",
          "}"
        ]
      },
      {
        "id": "instanceof_casting",
        "title": "Type Checking and Casting",
        "description": "Checking types and downcasting safely",
        "difficulty": "intermediate",
        "code": [
          "public class CastingDemo {",
          "    public static void main(String[] args) {",
          "        // Create parent-type variable with child object",
          "        Exercise e = new Squat();",
          "        // Check if object is instance of Squat class",
          "        if (e instanceof Squat) {",
          "            // Downcast to Squat type",
          "            Squat s = (Squat) e;",
          "            // Call method on downcasted object",
          "            s.perform();",
          "        }",
          "    }",
          "}"
        ]
      },
      {
        "id": "comprehensive_hierarchy",
        "title": "Complete Class Hierarchy",
        "description": "Combining inheritance, interfaces, and polymorphism",
        "difficulty": "advanced",
        "code": [
          "interface Scorable {",
          "    int score();",
          "}",
          "abstract class Activity {",
          "    String name;",
          "    Activity(String name) { this.name = name; }",
          "    abstract void perform();",
          "}",
          "// Class extending abstract class and implementing interface",
          "class Workout extends Activity implements Scorable {",
          "    int reps;",
          "    // Constructor with name and reps parameters",
          "    Workout(String name, int reps) {",
          "        // Call parent constructor with name",
          "        super(name);",
          "        // Store reps in field",
          "        this.reps = reps;",
          "    }",
          "    // Implement abstract method from Activity",
          "    void perform() {",
          "        System.out.println(\"Doing \" + name);",
          "    }",
          "    // Implement interface method",
          "    public int score() {",
          "        // Return reps multiplied by 2",
          "        return reps * 2;",
          "    }",
          "}"
        ]
      }
    ]
  }
}