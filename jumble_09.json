    "problems": [
      {
        "id": "simple_try_catch",
        "title": "Basic Try-Catch",
        "description": "Catching a simple exception",
        "difficulty": "beginner",
        "code": [
          "public class SimpleTryCatch {",
          "    public static void main(String[] args) {",
          "        // Start a try block for risky code",
          "        try {",
          "            // Convert text five to a number (will cause error)",
          "            int num = Integer.parseInt(\"five\");",
          "        // Catch NumberFormatException errors",
          "        } catch (NumberFormatException e) {",
          "            // Print error message",
          "            System.out.println(\"Invalid number\");",
          "        }",
          "    }",
          "}"
        ]
      },
      {
        "id": "multiple_catch",
        "title": "Multiple Catch Blocks",
        "description": "Catching different exception types",
        "difficulty": "beginner",
        "code": [
          "public class MultipleCatch {",
          "    public static void main(String[] args) {",
          "        String text = null;",
          "        // Start try block",
          "        try {",
          "            // Try to get length of null text (causes error)",
          "            int len = text.length();",
          "        // Catch null pointer errors",
          "        } catch (NullPointerException e) {",
          "            // Print null error message",
          "            System.out.println(\"Text is null\");",
          "        }",
          "    }",
          "}"
        ]
      },
      {
        "id": "finally_block",
        "title": "Using Finally",
        "description": "Code that always runs",
        "difficulty": "beginner",
        "code": [
          "public class FinallyBlock {",
          "    public static void main(String[] args) {",
          "        // Start try block",
          "        try {",
          "            // Divide by zero (causes error)",
          "            int result = 10 / 0;",
          "        // Catch arithmetic errors",
          "        } catch (ArithmeticException e) {",
          "            // Print error message",
          "            System.out.println(\"Cannot divide by zero\");",
          "        // Finally block always runs",
          "        } finally {",
          "            // Print completion message",
          "            System.out.println(\"Done\");",
          "        }",
          "    }",
          "}"
        ]
      },
      {
        "id": "throwing_exception",
        "title": "Throwing Exceptions",
        "description": "Creating and throwing your own exceptions",
        "difficulty": "intermediate",
        "code": [
          "public class ThrowExample {",
          "    public static void main(String[] args) {",
          "        // Create age variable with value 15",
          "        int age = 15;",
          "        // Start try block",
          "        try {",
          "            // Check if age is less than 18",
          "            if (age < 18) {",
          "                // Throw new exception with message",
          "                throw new IllegalArgumentException(\"Too young\");",
          "            }",
          "        // Catch the exception",
          "        } catch (IllegalArgumentException e) {",
          "            // Print the exception message",
          "            System.out.println(e.getMessage());",
          "        }",
          "    }",
          "}"
        ]
      },
      {
        "id": "throws_clause",
        "title": "Method with Throws",
        "description": "Declaring exceptions in method signature",
        "difficulty": "intermediate",
        "code": [
          "public class ThrowsExample {",
          "    // Method that declares it throws an exception",
          "    public static void checkBalance(double balance) throws IllegalArgumentException {",
          "        // Check if balance is negative",
          "        if (balance < 0) {",
          "            // Throw exception with message",
          "            throw new IllegalArgumentException(\"Negative balance\");",
          "        }",
          "    }",
          "    public static void main(String[] args) {",
          "        // Start try block",
          "        try {",
          "            // Call method with negative value",
          "            checkBalance(-100);",
          "        // Catch the exception",
          "        } catch (IllegalArgumentException e) {",
          "            // Print error occurred message",
          "            System.out.println(\"Error: \" + e.getMessage());",
          "        }",
          "    }",
          "}"
        ]
      },
      {
        "id": "custom_exception",
        "title": "Custom Exception Class",
        "description": "Creating your own exception type",
        "difficulty": "intermediate",
        "code": [
          "// Create custom exception class extending Exception",
          "class InsufficientFundsException extends Exception {",
          "    // Constructor that takes message parameter",
          "    public InsufficientFundsException(String message) {",
          "        // Pass message to parent Exception class",
          "        super(message);",
          "    }",
          "}",
          "public class CustomException {",
          "    public static void main(String[] args) {",
          "        // Start try block",
          "        try {",
          "            // Throw custom exception with message",
          "            throw new InsufficientFundsException(\"Not enough money\");",
          "        // Catch custom exception type",
          "        } catch (InsufficientFundsException e) {",
          "            // Print the exception message",
          "            System.out.println(e.getMessage());",
          "        }",
          "    }",
          "}"
        ]
      },
      {
        "id": "exception_info",
        "title": "Exception Information",
        "description": "Getting details from exceptions",
        "difficulty": "intermediate",
        "code": [
          "public class ExceptionInfo {",
          "    public static void main(String[] args) {",
          "        // Start try block",
          "        try {",
          "            // Create array with elements 1, 2, 3 in that order",
          "            int[] arr = {1, 2, 3};",
          "            // Access invalid array index 5 (causes error)",
          "            int num = arr[5];",
          "        // Catch array index errors",
          "        } catch (ArrayIndexOutOfBoundsException e) {",
          "            // Print exception message",
          "            System.out.println(\"Error: \" + e.getMessage());",
          "        }",
          "    }",
          "}"
        ]
      },
      {
        "id": "comprehensive_handling",
        "title": "Complete Exception Handling",
        "description": "Combining try-catch-finally with custom exceptions",
        "difficulty": "advanced",
        "code": [
          "class AccountException extends Exception {",
          "    // Constructor with message parameter",
          "    public AccountException(String message) {",
          "        // Pass to parent Exception",
          "        super(message);",
          "    }",
          "}",
          "public class BankSystem {",
          "    // Method that declares exception in signature",
          "    public static void withdraw(double balance, double amount) throws AccountException {",
          "        // Check if amount exceeds balance",
          "        if (amount > balance) {",
          "            // Throw custom exception with message",
          "            throw new AccountException(\"Insufficient funds\");",
          "        }",
          "        // Print success message",
          "        System.out.println(\"Withdrawal successful\");",
          "    }",
          "    public static void main(String[] args) {",
          "        // Start try block",
          "        try {",
          "            // Attempt withdrawal with balance 100 and amount 150",
          "            withdraw(100, 150);",
          "        // Catch custom exception",
          "        } catch (AccountException e) {",
          "            // Print error with exception message",
          "            System.out.println(\"Error: \" + e.getMessage());",
          "        // Finally block always runs",
          "        } finally {",
          "            // Print transaction complete message",
          "            System.out.println(\"Transaction complete\");",
          "        }",
          "    }",
          "}"
        ]
      }
    ]
  }
