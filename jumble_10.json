      {
        "id": "basic_lambda",
        "title": "Simple Lambda Expression",
        "description": "Creating basic lambda expressions with functional interfaces",
        "difficulty": "beginner",
        "code": [
          "public class SimpleLambda {",
          "    // This class demonstrates basic lambda syntax",
          "    public static void main(String[] args) {",
          "        // Create lambda: variable name is isFast, parameter is speed",
          "        SpeedChecker isFast = speed -> speed > 20;",
          "        // Test the lambda with different speeds",
          "        System.out.println(\"Is 25 fast? \" + isFast.check(25));",
          "        System.out.println(\"Is 15 fast? \" + isFast.check(15));",
          "    }",
          "}",
          "// Functional interface named SpeedChecker with method check",
          "interface SpeedChecker {",
          "    boolean check(int speed);",
          "}"
        ]
      },
      {
        "id": "stream_foreach",
        "title": "Basic Stream with forEach",
        "description": "Creating streams and using forEach operation",
        "difficulty": "beginner",
        "code": [
          "import java.util.ArrayList;",
          "public class StreamForEach {",
          "    // This class demonstrates basic stream creation and forEach",
          "    public static void main(String[] args) {",
          "        // ArrayList variable name is ships",
          "        ArrayList<String> ships = new ArrayList<>();",
          "        ships.add(\"Atlantic Cargo\");",
          "        ships.add(\"Ocean Breeze\");",
          "        ships.add(\"Sea Dragon\");",
          "        // Lambda parameter name is name, prints with \"Ship: \" prefix",
          "        ships.stream().forEach(name -> System.out.println(\"Ship: \" + name));",
          "    }",
          "}"
        ]
      },
      {
        "id": "stream_filter",
        "title": "Filtering with Streams",
        "description": "Using filter to select specific items",
        "difficulty": "beginner",
        "code": [
          "import java.util.ArrayList;",
          "public class StreamFilter {",
          "    // This class demonstrates stream filtering",
          "    public static void main(String[] args) {",
          "        // ArrayList variable name is speeds (holds Integer values)",
          "        ArrayList<Integer> speeds = new ArrayList<>();",
          "        speeds.add(15);",
          "        speeds.add(22);",
          "        speeds.add(18);",
          "        speeds.add(30);",
          "        // Print header text first",
          "        System.out.println(\"Fast speeds:\");",
          "        // Lambda parameter is speed, prints with \" knots\" suffix",
          "        speeds.stream().filter(speed -> speed > 20).forEach(speed -> System.out.println(speed + \" knots\"));",
          "    }",
          "}"
        ]
      },
      {
        "id": "stream_map",
        "title": "Transforming with Map",
        "description": "Using map to transform stream elements",
        "difficulty": "intermediate",
        "code": [
          "import java.util.ArrayList;",
          "public class StreamMap {",
          "    // This class demonstrates stream mapping",
          "    public static void main(String[] args) {",
          "        // ArrayList variable name is depths (in meters)",
          "        ArrayList<Integer> depths = new ArrayList<>();",
          "        depths.add(50);",
          "        depths.add(100);",
          "        depths.add(200);",
          "        // Print header text first",
          "        System.out.println(\"Depths in feet:\");",
          "        // First lambda parameter is meters, second lambda parameter is feet",
          "        depths.stream().map(meters -> meters * 3.28084).forEach(feet -> System.out.println(feet + \" feet\"));",
          "    }",
          "}"
        ]
      },
      {
        "id": "stream_collect",
        "title": "Collecting Stream Results",
        "description": "Using collect to create new lists from streams",
        "difficulty": "intermediate",
        "code": [
          "import java.util.ArrayList;",
          "import java.util.List;",
          "import java.util.stream.Collectors;",
          "public class StreamCollect {",
          "    // This class demonstrates collecting stream results",
          "    public static void main(String[] args) {",
          "        // ArrayList variable name is allShips",
          "        ArrayList<String> allShips = new ArrayList<>();",
          "        allShips.add(\"Atlantic Cargo\");",
          "        allShips.add(\"Ocean Breeze\");",
          "        allShips.add(\"Sea Dragon\");",
          "        allShips.add(\"Wave Runner\");",
          "        // New List variable name is sShips, lambda parameter is name",
          "        List<String> sShips = allShips.stream().filter(name -> name.startsWith(\"S\")).collect(Collectors.toList());",
          "        // Print with \"Ships starting with S: \" prefix",
          "        System.out.println(\"Ships starting with S: \" + sShips);",
          "    }",
          "}"
        ]
      },
      {
        "id": "stream_count",
        "title": "Counting with Streams",
        "description": "Using count to get stream size",
        "difficulty": "intermediate",
        "code": [
          "import java.util.ArrayList;",
          "public class StreamCount {",
          "    // This class demonstrates stream counting",
          "    public static void main(String[] args) {",
          "        // ArrayList variable name is treasures",
          "        ArrayList<Integer> treasures = new ArrayList<>();",
          "        treasures.add(50);",
          "        treasures.add(200);",
          "        treasures.add(800);",
          "        treasures.add(1200);",
          "        // Variable name is valuableCount, lambda parameter is value",
          "        long valuableCount = treasures.stream().filter(value -> value > 500).count();",
          "        // Print results with descriptive labels",
          "        System.out.println(\"Valuable treasures: \" + valuableCount);",
          "        System.out.println(\"Total treasures: \" + treasures.size());",
          "    }",
          "}"
        ]
      },
      {
        "id": "stream_sorted",
        "title": "Sorting Streams",
        "description": "Using sorted to organize stream data",
        "difficulty": "intermediate",
        "code": [
          "import java.util.ArrayList;",
          "import java.util.List;",
          "import java.util.stream.Collectors;",
          "public class StreamSorted {",
          "    // This class demonstrates stream sorting",
          "    public static void main(String[] args) {",
          "        // ArrayList variable name is weights",
          "        ArrayList<Integer> weights = new ArrayList<>();",
          "        weights.add(30);",
          "        weights.add(80);",
          "        weights.add(15);",
          "        weights.add(50);",
          "        // New List variable name is sorted",
          "        List<Integer> sorted = weights.stream().sorted().collect(Collectors.toList());",
          "        // Print with \"Sorted weights: \" prefix",
          "        System.out.println(\"Sorted weights: \" + sorted);",
          "    }",
          "}"
        ]
      },
      {
        "id": "stream_numeric",
        "title": "Numeric Stream Operations",
        "description": "Using sum, max, and average with numeric streams",
        "difficulty": "advanced",
        "code": [
          "import java.util.ArrayList;",
          "import java.util.OptionalInt;",
          "import java.util.OptionalDouble;",
          "public class NumericStreams {",
          "    // This class demonstrates numeric stream operations",
          "    public static void main(String[] args) {",
          "        // ArrayList variable name is capacities",
          "        ArrayList<Integer> capacities = new ArrayList<>();",
          "        capacities.add(3000);",
          "        capacities.add(5000);",
          "        capacities.add(7000);",
          "        // Variable name is total, lambda parameter is cap",
          "        int total = capacities.stream().mapToInt(cap -> cap).sum();",
          "        System.out.println(\"Total capacity: \" + total + \" tons\");",
          "        // Variable name is max (type OptionalInt), use getAsInt() to retrieve",
          "        OptionalInt max = capacities.stream().mapToInt(cap -> cap).max();",
          "        System.out.println(\"Max capacity: \" + max.getAsInt() + \" tons\");",
          "        // Variable name is avg (type OptionalDouble), use getAsDouble() to retrieve",
          "        OptionalDouble avg = capacities.stream().mapToInt(cap -> cap).average();",
          "        System.out.println(\"Average capacity: \" + avg.getAsDouble() + \" tons\");",
          "    }",
          "}"
        ]
      }
    ]
  }
